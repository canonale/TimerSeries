<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:id="@android:id/background">
        <shape>
            <corners
                    android:radius="5dip" />
            <stroke android:color="@color/gris_75"
                    android:width="1dp" />
            <solid android:color="@color/negro"/>
        </shape>
    </item>
    <item
            android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                        android:radius="5dip" />
                <solid android:color="@color/morado" />
            </shape>
        </clip>
    </item>
</layer-list>